<div class="wrapper">
  <h2>投稿一覧</h2>
  <div class="index">
    <div class="gallery row">
      <% @posts.each do |post| %>
        <div class="col-md-4">
          <%= link_to post_path(post.id) do %>

            <div class="gallery-item">
              <%= image_tag post.desk_images[0] if post.desk_images.attached? %>
              <%= post.user.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>



