<h1>保存した投稿</h1>
  <div class="container my-5">
    <div class="row">
      <% @bookmark_posts.each do |bookmark_post| %>
        <div class="col-md-6 col-lg-4">
          <div class="card my-5" style="max-width: 30rem; height: 23rem;">
            <%= link_to post_path(bookmark_post.id), class: "card-link" do %>
              <%= image_tag bookmark_post.desk_images[0], class: "card-img-top" if bookmark_post.desk_images.attached?%>
              <div class="card-body">
                <div class="user-info mb-3">
                  <% if bookmark_post.user.avatar.attached? %>
                    <%= image_tag bookmark_post.user.avatar, class: "host-icon" %>
                  <% else %>
                    <img class="host-icon" src="/assets/default_icon.jpeg">
                  <% end %>
                  <div class="post-user-info">
                    <%= bookmark_post.user.name %>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                    <%= bookmark_post.likes.count %>
                    <i class="fa-regular fa-comments" aria-hidden="true"></i>
                    <%= bookmark_post.comments.count %>
                    <i class="fa-regular fa-bookmark" aria-hidden="true"></i>
                    <%= bookmark_post.bookmarks.count %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
