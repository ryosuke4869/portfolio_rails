<%= search_form_for @q do |f| %>
  <div class="ransack">
    <div class="label_title">
      <%= f.label :category_eq, "カテゴリーから探す" %>
      <div class="sort_by">
        <%= f.radio_button :category_eq, '', { checked: params[:q].nil? || params[:q][:category_eq].blank? } %>
        <%= f.label :category_none, "指定なし" %>
        <%= f.radio_button :category_eq, "Engineer", checked: !params[:q].nil? && params[:q][:category_eq] == "Engineer" %>
        <%= f.label :category_engineer, "Engineer" %>
        <%= f.radio_button :category_eq, "Writer", checked: !params[:q].nil? && params[:q][:category_eq] == "Writer" %>
        <%= f.label :category_writer, "Writer" %>
        <%= f.radio_button :category_eq, "Gamer", checked: !params[:q].nil? && params[:q][:category_eq] == "Gamer" %>
        <%= f.label :category_gamer, "Gamer" %>
      </div>
    </div>

    <div class="label_title">
      <%= f.label :s, "投稿の並び替え" %>
      <div class="sort_order">
          <%= f.label :s, "ソート順" %>
          <%= f.select :s, options_for_select([["指定なし", ""], ["投稿日", "created_at"], ["いいね数", "likes"]], params[:s]), include_blank: false %>
          <%= f.label :s, "並び順" %>
          <%= f.select :s, options_for_select([["指定なし", ""], ["降順", "desc"], ["昇順", "asc"]], params[:s]), include_blank: false %>
      </div>
    </div>
    <%= f.submit "絞り込む" %>
  </div>
<% end %>
