<div class="wrapper">
  <div class="mypage container">
    <div class="mypage-info row my-3">
      <div class="col-md-6 d-flex justify-content-center">
        <% if current_user.avatar.attached? %>
          <%=image_tag current_user.avatar, class: "mypage-avatar" %>
        <% else %>
          <img class="mypage-avatar" src="/assets/default_icon.jpeg">
        <% end %>
      </div>
      <div class="col-md-6 chart">
        <canvas id="myRaderChart" style="max-width:500px;"></canvas>
      </div>
      <div class="row text-center">
        <div class="col-md-6 d-flex align-items-center justify-content-center">
          <%= current_user.name %>
        </div>
        <div class="col-md-6">
          <%= link_to "アカウントの編集", edit_user_registration_path, class:"btn btn-dark my-5"%>
        </div>
      </div>
    </div>

  <%# ここから 投稿, いいねした投稿、保存した投稿を表示（Tab使用）%>
    <ul class="tab-area row">
      <li class="tab active col-md-4 ">
        <i class="fa-regular fa-images" aria-hidden="true"></i>
        Post
      </li>

      <li class="tab col-md-4 ">
        <i class="fa-regular fa-heart" aria-hidden="true"></i>
        Like
      </li>

      <li class="tab col-md-4 ">
        <i class="fa-regular fa-bookmark" aria-hidden="true"></i>
        Bookmark
      </li>
    </ul>

    <div class="panel-area">
      <div class="panel active">
        <h3>このユーザーの投稿</h3>
        <%= render 'post-list' %>
      </div>
    </div>

    <div class="panel-area">
      <div class="panel">
        <h3>いいねした投稿</h3>
        <%= render 'like-list'%>
      </div>
    </div>

    <div class="panel-area">
      <div class="panel">
        <h3>保存した投稿</h3>
        <%= render 'bookmark-list'%>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'mypage' %>
<%= javascript_pack_tag 'chart' %>
