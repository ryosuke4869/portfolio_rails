<div id="like_post_paginate">
  <div class="container my-5">
    <div class="row">
      <% @like_posts.each do |like_post| %>
        <div class="col-md-6 col-lg-4">
          <div class="card my-5" style="max-width: 30rem; height: 23rem;">
            <%= link_to post_path(like_post.id), class: "card-link" do %>
              <%= image_tag like_post.desk_images[0].variant( resize: "478x269!").processed, class: "card-img-top" if like_post.desk_images.attached?%>
              <div class="card-body">
                <div class="user-info mb-3">
                  <% if like_post.user.avatar.attached? %>
                    <%= image_tag like_post.user.avatar, class: "host-icon" %>
                  <% else %>
                    <img class="host-icon" src="/assets/default_icon.jpeg">
                  <% end %>
                  <div class="post-user-info">
                    <%= like_post.user.name %>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                    <%= like_post.likes.count %>
                    <i class="fa-regular fa-comments" aria-hidden="true"></i>
                    <%= like_post.comments.count %>
                    <i class="fa-regular fa-bookmark" aria-hidden="true"></i>
                    <%= like_post.bookmarks.count %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="paginate-container">
      <%= paginate @like_posts, remote: true %>
    </div>
  </div>
</div>
