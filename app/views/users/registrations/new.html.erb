<div class="wrapper devise">
  <div class="devise-frame">
    <p>新しいアカウントを作成</p>
    <div class="devise_inner ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="devise-field required">
          <div class="required-b"></div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" , class:"area"%>
        </div>

        <div class="devise-field">
          <div class="device-form-group">
            <%= f.label :avatar ,"アイコン画像" %>
            <%= image_tag @user.avatar, class:"image_content" if @user.avatar.attached?%>
            <%= f.file_field :avatar, placeholder: "アイコン画像をアップロード" %>
          </div>
        </div>

        <div class="devise-field required">
          <div class="required-b"></div>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class:"area" %>
        </div>

        <div class="devise-field required">
          <div class="required-b"></div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" , class:"area"%>
        </div>

        <div class="devise-field required">
          <div class="required-b"></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認", class:"area" %>
        </div>

        <div class="actions devise-field">
          <%= f.submit "新規登録", class: "btn-orange btn-cubic btn-shadow" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
